{
  "manifest_version": 2,

  "name": "Highlighter",
  "description": "This extension highlights shit on a page.",
  "version": "1.0",

  "background": {
    "scripts": ["popup.js"],
    "persistent": false
    },

  "content_scripts": [
    {"js": ["jquery-1.10.1.min.js", "popup.js"],
     "matches": ["http://*/*", "https://*/*"]}
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs"
  ]
}
